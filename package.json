{
  "private": true,
  "name": "nomus",
  "devDependencies": {
    "apollo": "^2.28.0"
  },
  "scripts": {
    "types:watch": "apollo client:codegen --watch --outputFlat --target=typescript --config=apollo.config.js ./client/src/apollo/types",
    "types:clean": "rm -f ./client/src/apollo/types/*",
    "types:gen": "yarn types:clean && apollo client:codegen --outputFlat --target=typescript --config=apollo.config.js ./client/src/apollo/types",
    "test": "yarn test:client && yarn test:server",
    "test:client": "cd client && yarn test --watchAll=false",
    "test:server": "cd server && yarn test"
  },
  "workspaces": [
    "client/",
    "server/"
  ]
}
